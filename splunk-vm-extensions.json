{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "East US",
      "allowedValues": [
        "Brazil South",
        "East Asia",
        "East US",
        "Japan East",
        "Japan West",
        "North Central US",
        "North Europe",
        "South Central US",
        "West Europe",
        "West US",
        "Southeast Asia",
        "Central US",
        "East US 2"
      ],
      "metadata": {
        "description": "Network Security Group Deployment Location"
      }
    },
    "computeApiVersion": {
      "type": "string",
      "defaultValue": "2015-06-15",
      "metadata": {
        "description": "API Version for the Compute Resources"
      }
    },
    "tag": {
      "type": "object",
      "defaultValue": {
        "key1": "Extensions",
        "value1": "splunk"
      },
      "metadata": {
        "description": "Tag Values"
      }
    },
    "virtualMachineName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Virtual Machine Name"
      }
    },
    "vmExtensionName": {
      "type": "string",
      "defaultValue": "node-setup.sh",
      "metadata": {
        "description": "Virtual Machine Extension Name"
      }
    },
    "customScriptUrl": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/SrikalaRekapalli/splunk/master/node-setup.sh",
      "metadata": {
        "description": "Custom Script URL"
      }
    },
    "splunkServerRole":{
      "type":"string",
      "defaultValue":"splunk_server",
      "metaData":{
        "description":"splunk server"
      }
    },
    "splunkAdminPassword":{
      "type":"securestring",
      "defaultValue":"",
      "metaData":{
        "description":"Splunk admin password"
      }
    }
  },
  "variables": {
    "singleQuote":"'"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('virtualMachineName'),'/', parameters('vmExtensionName'))]",
      "apiVersion": "[parameters('computeApiVersion')]",
      "location": "[parameters('location')]",
      "tags": {
        "[parameters('tag').key1]": "[parameters('tag').value1]"
      },
      "properties": {
        "publisher": "Microsoft.OSTCExtensions",
        "type": "CustomScriptForLinux",
        "typeHandlerVersion": "1.5",
        "settings": {
          "fileUris": [
            "[parameters('customScriptUrl')]"
          ],
          "commandToExecute": "[concat('bash node-setup.sh', ' -r ', parameters('splunkServerRole'),' -p ', variables('singleQuote'), parameters('splunkAdminPassword'), variables('singleQuote'))]"

        }
      }
    }
  ]
}
