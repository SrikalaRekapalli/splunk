{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "East US",
      "allowedValues": [
        "Brazil South",
        "East Asia",
        "East US",
        "Japan East",
        "Japan West",
        "North Central US",
        "North Europe",
        "South Central US",
        "West Europe",
        "West US",
        "Southeast Asia",
        "Central US",
        "East US 2"
      ],
      "metadata": {
        "description": "Network Security Group Deployment Location"
      }
    },
    "networkApiVersion": {
      "type": "string",
      "defaultValue": "2016-03-30",
      "metadata": {
        "description": "API Version for the Network Resources"
      }
    },
    "networkInterfacesName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Network Interface Name"
      }
    },
    "tag": {
      "type": "object",
      "defaultValue": {
        "key1": "nic",
        "value1": "splunk"
      },
      "metadata": {
        "description": "Tag Values"
      }
    },
    "networkSecurityGroupName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Network Security Group Name"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Virtual Network Name"
      }
    },
    "publicIPAddressName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Public IP Address Name"
      }
    },
    "subnet1Name": {
      "type": "string",

      "defaultValue": "",
      "metadata": {
        "description": "subnet reference where the Network Interface is being Deployed"
      }
    }
  },
  "variables": {
"subnet-id":"[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName')), '/subnets/',parameters('subnet1Name'))]"
  },
  "resources": [
    {
      "comments": "Network Interface Resource",
      "apiVersion": "[parameters('networkApiVersion')]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('networkInterfacesName')]",
      "location": "[parameters('location')]",
      "tags": {
        "[parameters('tag').key1]": "[parameters('tag').value1]"
      },
      "properties": {
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
        },
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
                "privateIPAddress": "10.2.0.4",
              "privateIPAllocationMethod": "Static",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('publicIPAddressName'))]"
              },
              "subnet": {
                "id": "[variables('subnet-id')]"
              }
            }
          }
        ],
        "dnsSettings": {
        "dnsServers": []
                },
        "enableIPForwarding": false
      }
    }
  ]
}